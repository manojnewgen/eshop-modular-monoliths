{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Seq"],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "System": "Information",
        "Carter": "Debug",
        "Shared.Behaviors.LoggingBehavior": "Debug",
        "Shared.Behaviors.SerilogBehavior": "Debug",
        "Shared.Behaviors.PerformanceBehavior": "Debug",
        "Shared.Behaviors.RequestContextBehavior": "Debug",
        "Shared.Exceptions.Handler": "Debug",
        "Catalog.Products": "Debug",
        "Basket": "Debug",
        "Ordering": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{SourceContext:l}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "restrictedToMinimumLevel": "Verbose"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/eShop-dev-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 52428800,
          "retainedFileCountLimit": 3,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] [{Application}] [{CorrelationId}] [{SourceContext:l}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithEnvironmentName", 
      "WithMachineName",
      "WithProcessId",
      "WithProcessName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "eShop.ModularMonolith.Development"
    }
  },
  
  "Logging": {
    "LogLevel": {
      "Default": "Debug"
    },
    "Seq": {
      "ServerUrl": "http://localhost:5341",
      "ApiKey": ""
    },
    "LogPath": "logs/eShop-dev-.txt"
  },
  
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=EShopDev;Username=postgres;Password=postgres;",
    "CatalogConnection": "Host=localhost;Database=EShopDev;Username=postgres;Password=postgres;",
    "BasketConnection": "Host=localhost;Database=EShopDev;Username=postgres;Password=postgres;",
    "OrderingConnection": "Host=localhost;Database=EShopDev;Username=postgres;Password=postgres;"
  },
  
  "AllowedHosts": "*"
}