# Environment Variables Template for eShop Modular Monolith
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env files to Git!

# =============================================================================
# DATABASE CONFIGURATION (LOCAL POSTGRESQL)
# =============================================================================
POSTGRES_DB=eshopdb
POSTGRES_USER=eshopuser
POSTGRES_PASSWORD=EShop123!
POSTGRES_PORT=5432

# =============================================================================
# APPLICATION CONFIGURATION  
# =============================================================================
ASPNETCORE_ENVIRONMENT=Development
API_HTTP_PORT=8080
API_HTTPS_PORT=8081
LOG_LEVEL=Information

# =============================================================================
# KEYCLOAK/IDENTITY CONFIGURATION
# =============================================================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123
KEYCLOAK_HTTP_PORT=8082
KEYCLOAK_HTTPS_PORT=8443
KEYCLOAK_HOSTNAME=localhost

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PORT=6379

# =============================================================================
# RABBITMQ CONFIGURATION
# =============================================================================
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# =============================================================================
# PGADMIN CONFIGURATION
# =============================================================================
PGADMIN_EMAIL=admin@eshop.com
PGLADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# =============================================================================
# SEQ LOGGING CONFIGURATION
# =============================================================================
SEQ_PORT=5341
SEQ_ADMIN_PASSWORD_HASH=

# =============================================================================
# LOCAL POSTGRESQL CONNECTION REFERENCE
# =============================================================================
# Using Local PostgreSQL:
# - Application (in Docker): connect to 'host.docker.internal:5432'
# - pgAdmin (local): connect to 'localhost:5432'
# - Create database: eshopdb
# - Create user: eshopuser with password EShop123!

# =============================================================================
# PRODUCTION NOTES
# =============================================================================
# For production environments:
# 1. Use strong, unique passwords (minimum 12 characters)
# 2. Consider using Docker secrets or external secret management
# 3. Use different databases for different environments
# 4. Enable SSL/TLS for database connections
# 5. Restrict network access and use proper firewall rules