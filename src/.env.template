# Environment Variables Template for eShop Modular Monolith
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env files to Git!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=eshopdb
POSTGRES_USER=eshopuser
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# =============================================================================
# APPLICATION CONFIGURATION  
# =============================================================================
ASPNETCORE_ENVIRONMENT=Development
API_HTTP_PORT=8080
API_HTTPS_PORT=8081
LOG_LEVEL=Information

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PORT=6379

# =============================================================================
# PGADMIN CONFIGURATION
# =============================================================================
PGADMIN_EMAIL=admin@eshop.com
PGADMIN_PASSWORD=your_pgadmin_password_here
PGADMIN_PORT=5050

# =============================================================================
# SEQ LOGGING CONFIGURATION
# =============================================================================
SEQ_PORT=5341

# =============================================================================
# EXAMPLE VALUES FOR DEVELOPMENT (NOT FOR PRODUCTION!)
# =============================================================================
# POSTGRES_PASSWORD=DevPassword123!
# PGADMIN_PASSWORD=DevAdmin123!

